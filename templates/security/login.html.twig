{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Se connecter{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
            <h2 class="text-center my-5 text-secondary">Se connecter</h2>
            <div class="container">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
                   autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>

            <div class="button d-flex justify-content-center mt-5">
                <button class="btn btn-lg btn-secondary" type="submit">Se connecter</button>
            </div>
            </div>
    </form>
{% endblock %}
