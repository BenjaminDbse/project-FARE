{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Archives{% endblock %}

{% block body %}
    <div class="container mb-5">
        <h2 class="text-center my-5 justify-content-center">Archives</h2>
        <div class="d-flex justify-content-center">
            <div class="w-50 text-center">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="text-center m-4">
                    <button class="btn btn-secondary">{{ 'Rechercher' }}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <table class="table table-responsive-lg text-dark text-center mb-5">
            <thead class="thead-light">
            <tr>
                <th>Date d'import</th>
                <th>Titre</th>
                <th>Importé par</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for import in imports %}
                <tr>
                    <td>{{ import.datetime|format_datetime('full', 'short', locale='fr') }}</td>
                    <td>{{ import.title }}</td>
                    <td>{{ import.author.lastname ?? '' }} {{ import.author.firstname ?? '' }}</td>
                    <td>
                        <a
                                class="col btn btn-primary mb-sm-2 mb-2 mb-2"
                                href="{{ path('graph', {'id': import.id }) }}">
                            Voir le graphique
                        </a>
                        {% if is_granted("ROLE_ADMIN") or import.author == app.user %}
                            {{ include('admin/import/_delete_form.html.twig') }}
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="text-danger" colspan="8">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="button d-flex justify-content-around mb-5">
            <a class="btn btn-dark text-primary" href="{{ path('home') }}">Retour</a>
        </div>
    </div>
{% endblock %}
